(
    // Custom COSMIC keybindings

    // Terminal - Super+Return opens alacritty
    (
        modifiers: [Super],
        key: "Return",
        action: Spawn("alacritty"),
    ),

    // Close window - Super+Q
    (
        modifiers: [Super],
        key: "q",
        action: Close,
    ),

    // Lock screen - Super+Alt+L
    (
        modifiers: [Super, Alt],
        key: "l",
        action: Spawn("cosmic-locker"),
    ),

    // Variety next wallpaper - Super+Alt+W
    (
        modifiers: [Super, Alt],
        key: "w",
        action: Spawn("variety -n"),
    ),

    // Vim-style window navigation
    // Focus left - Super+H
    (
        modifiers: [Super],
        key: "h",
        action: FocusLeft,
    ),

    // Focus down - Super+J
    (
        modifiers: [Super],
        key: "j",
        action: FocusDown,
    ),

    // Focus up - Super+K
    (
        modifiers: [Super],
        key: "k",
        action: FocusUp,
    ),

    // Focus right - Super+L
    (
        modifiers: [Super],
        key: "l",
        action: FocusRight,
    ),

    // Vim-style window movement
    // Move window left - Super+Shift+H
    (
        modifiers: [Super, Shift],
        key: "h",
        action: MoveLeft,
    ),

    // Move window down - Super+Shift+J
    (
        modifiers: [Super, Shift],
        key: "j",
        action: MoveDown,
    ),

    // Move window up - Super+Shift+K
    (
        modifiers: [Super, Shift],
        key: "k",
        action: MoveUp,
    ),

    // Move window right - Super+Shift+L
    (
        modifiers: [Super, Shift],
        key: "l",
        action: MoveRight,
    ),
)
